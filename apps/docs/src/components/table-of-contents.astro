---
import type { MarkdownHeading } from 'astro'

type Props = {
  headings: MarkdownHeading[]
}

const {headings} = Astro.props
const activeHeadingSlug = ''
---

<aside class="fixed inset-y-0 w-64 right-0 pt-28 shrink-0 order-1 hidden desktop-lg:flex">
      <div class="py-12 w-full h-full overflow-auto pr-4">
        <h4 class="font-bold mb-2">On this page</h4>
        <ul class="border-l border-gray-cool-20">
          {headings.map((heading) => (
            <li class="border-l-4 -ml-1" class:list={activeHeadingSlug === heading.slug ? 'border-black' : 'border-transparent'}>
              <a href={`#${heading.slug}`} class="block relative py-1.5 px-4 text-blue-60v hover:text-blue-70v hover:underline focus:outline focus:outline-4 focus:outline-offset-0 focus:outline-blue-40v leading-tighter text-sm">
                <span class:list={{
                  'pl-3': heading.depth === 3, 
                  'pl-6': heading.depth === 4
                }}>{heading.text}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </aside>
