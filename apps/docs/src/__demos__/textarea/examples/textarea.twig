<div class="space-y-12">

  <div>
    <label for="default" class="block">Default input</label>
    <div class="mt-2 relative">
      <textarea
        id="default"
        class="p-2 bg-transparent w-full max-w-lg min-h-10 border border-gray-60 focus:outline focus:outline-offset-0 focus:outline-4 focus:outline-blue-40v invalid:ring-4 invalid:ring-red-60v invalid:border-transparent invalid:outline-offset-4 valid:ring-4 valid:ring-green-cool-40v valid:border-transparent valid:outline-offset-4"
        rows="6"
      ></textarea>
    </div>
  </div>

  <div>
    <label for="description" class="block">Description input</label>
    <div id="input-hint" class="text-gray-50">An input description</div>
    <div class="mt-2 relative">
      <textarea
        id="description"
        aria-describedby="input-hint"
        class="p-2 bg-transparent w-full max-w-lg min-h-10 border border-gray-60 focus:outline focus:outline-offset-0 focus:outline-4 focus:outline-blue-40v invalid:ring-4 invalid:ring-red-60v invalid:border-transparent invalid:outline-offset-4 valid:ring-4 valid:ring-green-cool-40v valid:border-transparent valid:outline-offset-4"
        rows="6"
      ></textarea>
    </div>
  </div>

  <div>
    <label for="success" class="block">Success input</label>
    <div class="mt-2 relative">
      <textarea
        id="success"
        class="p-2 bg-transparent w-full max-w-lg min-h-10 border border-gray-60 focus:outline focus:outline-offset-0 focus:outline-4 focus:outline-blue-40v invalid:ring-4 invalid:ring-red-60v invalid:border-transparent invalid:outline-offset-4 valid:ring-4 valid:ring-green-cool-40v valid:border-transparent valid:outline-offset-4"
        rows="6"
        data-valid="true"
      ></textarea>
    </div>
  </div>

  <div>
    <label for="error" class="block">Error input</label>
    <div class="mt-2 relative">
      <textarea
        id="error"
        class="p-2 bg-transparent w-full max-w-lg min-h-10 border border-gray-60 focus:outline focus:outline-offset-0 focus:outline-4 focus:outline-blue-40v invalid:ring-4 invalid:ring-red-60v invalid:border-transparent invalid:outline-offset-4 valid:ring-4 valid:ring-green-cool-40v valid:border-transparent valid:outline-offset-4"
        rows="6"
        data-invalid="true"
      ></textarea>
    </div>
  </div>

</div>
