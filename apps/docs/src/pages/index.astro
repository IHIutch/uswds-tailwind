---
import BaseLayout from "#layouts/base-layout.astro";
import HomeLayout from "#layouts/home-layout.astro";
import { Image } from "astro:assets";

import tailwind from "#assets/img/tailwindcss-logo.svg";
import alpine from "#assets/img/alpine-logo.svg";
import parcel from "#assets/img/parcel-logo.png";
---

<BaseLayout
  description="Build federal websites and applications faster than ever using modern tooling."
>
  <HomeLayout>
    <div class="bg-blue-80v py-24">
      <div class="max-w-5xl mx-auto px-4">
        <h1
          class="text-4xl mobile-lg:text-5xl tablet:text-6xl max-w-2xl !leading-tighter font-public-sans font-bold text-white mb-12"
        >
          Build federal websites and applications faster than ever.
        </h1>

        <p
          class="text-white/90 text-xl mobile-lg:text-2xl font-public-sans !leading-relaxed max-w-screen-tablet"
        >
          Build the same design system you know and love with the speed and
          flexibility of modern tooling.
        </p>
      </div>
    </div>
    <div class="bg-gray-cool-3 py-16">
      <div class="max-w-5xl mx-auto px-4">
        <h2
          class="text-center text-2xl font-semibold font-public-sans text-gray-cool-60 mb-8"
        >
          Industry Leading Dev Tools
        </h2>
        <div class="flex flex-wrap">
          <div class="mx-auto w-full tablet:w-1/2 desktop:w-1/3">
            <div class="pb-6 tablet:p-3 pt-0">
              <Image
                loading="eager"
                class="h-10 max-w-56 object-contain mx-auto"
                src={tailwind}
                alt="Tailwind Logo"
              />
            </div>
          </div>
          <div class="mx-auto w-full tablet:w-1/2 desktop:w-1/3">
            <div class="py-6 tablet:p-3">
              <Image
                loading="eager"
                class="h-10 max-w-56 object-contain mx-auto"
                src={alpine}
                alt="Alpine Logo"
              />
            </div>
          </div>
          <div class="mx-auto w-full tablet:w-1/2 desktop:w-1/3">
            <div class="pt-6 tablet:p-3 pb-0">
              <Image
                loading="eager"
                class="h-10 max-w-56 object-contain mx-auto"
                src={parcel}
                alt="Parcel Logo"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="py-16">
      <div class="max-w-5xl mx-auto px-4">
        <div class="grid desktop:grid-cols-3 tablet:grid-cols-2 gap-8">
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--accessibility-new] size-6"
              ></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Accessible
            </h3>
            <p class="text-gray-cool-70">
              Strictly follows WAI-ARIA and Section 508 standards for all
              components.
            </p>
          </div>
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--palette] size-6"></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Tokenized
            </h3>
            <p class="text-gray-cool-70">
              Customize any part of our components to match your design needs.
            </p>
          </div>
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--dashboard] size-6"></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Composable
            </h3>
            <p class="text-gray-cool-70">
              Designed with composition in mind. Compose new designs with ease.
            </p>
          </div>
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--dark-mode] size-6"></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Flexible
            </h3>
            <p class="text-gray-cool-70">
              Optimized for multiple color modes including high-contrast.
            </p>
          </div>
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--psychology] size-6"></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Developer Experience
            </h3>
            <p class="text-gray-cool-70">
              Boost your productivity by leveraging familiar VSCode extensions.
            </p>
          </div>
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--bolt] size-6"></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Lightweight
            </h3>
            <p class="text-gray-cool-70">
              Reduce your footprint allowing and increase overall UX.
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="border-t border-t-gray-cool-5">
      <div class="max-w-5xl mx-auto flex justify-between p-4">
        <p class="text-sm text-gray-cool-60">All rights reserved.</p>
        <p class="text-sm text-gray-cool-60">MIT License</p>
      </div>
    </div>
  </HomeLayout>
</BaseLayout>
