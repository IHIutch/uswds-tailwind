---
import { getCollection } from "astro:content";
import BaseLayout from "#layouts/base-layout.astro";
import HomeLayout from "#layouts/home-layout.astro";
import { Image } from "astro:assets";

import tailwind from "#assets/img/tailwindcss-logo.svg";
import alpine from "#assets/img/alpine-logo.svg";
import parcel from "#assets/img/parcel-logo.png";
---

<BaseLayout title="Welcome">
  <HomeLayout>
    <div class="bg-blue-80v py-24">
      <div class="max-w-5xl mx-auto">
        <h1
          class="text-6xl max-w-2xl leading-tighter font-public-sans font-bold text-white mb-12"
        >
          Build federal websites and applications faster than ever.
        </h1>

        <p
          class="text-white/90 max-w-prose text-2xl font-public-sans leading-relaxed"
        >
          Using the latest in modern tooling, build the same design system you
          know and love with the speed and flexibility of industry leaders.
        </p>
      </div>
    </div>
    <div class="bg-gray-cool-3 py-16">
      <div class="max-w-5xl mx-auto">
        <h2
          class="text-center text-2xl font-semibold font-public-sans text-gray-cool-60 mb-12"
        >
          Industry Leading Tools
        </h2>
        <div class="grid grid-cols-3 gap-4">
          <div>
            <Image
              loading="eager"
              class="h-10 object-contain"
              src={tailwind}
              alt="Tailwind Logo"
            />
          </div>
          <div>
            <Image
              loading="eager"
              class="h-10 object-contain"
              src={alpine}
              alt="Alpine Logo"
            />
          </div>
          <div class="flex items-center gap-3">
            <div>
              <Image
                loading="eager"
                class="h-10 w-auto object-contain"
                src={parcel}
                alt="Parcel Logo"
              />
            </div>
            <div class="h-8 text-gray-cool-60">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 1068.58691 218.40186"
                height="100%"
                fill="currentColor"
                aria-hidden="true"
                ><path
                  d="M134.10156,41.99756c25.2002,0,42.6001,17.40039,42.6001,42.60059v54.60059c0,25.2002-17.3999,42.60059-42.6001,42.60059H66.90088v76.20117H23.7002V41.99756Zm24,46.80078c0-18.6001-10.80029-29.40039-29.40039-29.40039H42.30029V240.6001h6V164.39893h80.40088c18.6001,0,29.40039-10.7998,29.40039-29.40039ZM128.70117,65.39795c15.00049,0,23.40039,8.40039,23.40039,23.40039v46.2002c0,15.00049-8.3999,23.40039-23.40039,23.40039H48.30029v-93.001Zm-5.3999,75.60107c6.6001,0,10.2002-3.6001,10.2002-10.2002V92.99854c0-6.6001-3.6001-10.2002-10.2002-10.2002H66.90088V140.999Z"
