                  d="M1001.68555,41.99756V217.19971h90.60156v40.80078H958.48535V41.99756Zm72.001,198.60254v-6H983.08594V59.39795h-6V240.6001Z"
                  transform="translate(-23.7002 -40.79785)"></path></svg
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="py-16">
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-3 gap-8">
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--accessibility-new] size-6"
              ></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Accessible
            </h3>
            <p class="text-gray-cool-70">
              Strictly follows WAI-ARIA and Section 508 standards for all
              components.
            </p>
          </div>
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--palette] size-6"></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Tokenized
            </h3>
            <p class="text-gray-cool-70">
              Customize any part of our components to match your design needs.
            </p>
          </div>
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--dashboard] size-6"></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Composable
            </h3>
            <p class="text-gray-cool-70">
              Designed with composition in mind. Compose new designs with ease.
            </p>
          </div>
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--dark-mode] size-6"></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Flexible
            </h3>
            <p class="text-gray-cool-70">
              Optimized for multiple color modes including high-contrast.
            </p>
          </div>
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--psychology] size-6"></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Developer Experience
            </h3>
            <p class="text-gray-cool-70">
              Boost your productivity by leveraging familiar VSCode extensions.
            </p>
          </div>
          <div
            class="px-4 py-6 border border-gray-cool-20 rounded-lg shadow bg-white"
          >
            <div
              class="bg-blue-80v size-10 flex items-center justify-center rounded-full text-white mb-3"
            >
              <span class="icon-[material-symbols--bolt] size-6"></span>
            </div>
            <h3 class="text-xl font-semibold font-public-sans mb-2">
              Lightweight
            </h3>
            <p class="text-gray-cool-70">
              Reduce your footprint allowing and increase overall UX.
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="py-4 border-t border-t-gray-cool-5">
      <div class="max-w-5xl mx-auto flex justify-between">
        <p class="text-sm text-gray-cool-60">All rights reserved.</p>
        <p class="text-sm text-gray-cool-60">MIT License</p>
      </div>
    </div>
  </HomeLayout>
</BaseLayout>
