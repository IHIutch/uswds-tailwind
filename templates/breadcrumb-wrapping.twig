{% extends "base.twig" %} {% block content %}

{% set breadcrumbs = [{
  label: 'Home',
  slug: '#',
},
{
  label: 'Federal Contracting',
  slug: '#',
},
{
  label: 'Contracting assistance programs',
  slug: '#',
}] %}

<div class="p-4">

  <nav aria-label="Breadcrumbs" class="py-4 leading-snug">
    <ol class="list-none p-2 -mx-1 block">
    {% for breadcrumb in breadcrumbs %}
      <li class="inline-block whitespace-nowrap max-mobile-lg:sr-only">
        <a href="{{breadcrumb.slug}}" class="text-blue-60v visited:text-violet-70v hover:text-blue-70v focus:outline focus:outline-4 focus:outline-blue-40v underline"><span>{{breadcrumb.label}}</span></a>
        <span aria-hidden="true" class="hidden mobile-lg:inline">
          <span class="material-symbols-outlined !text-base !leading-none align-middle text-gray-50">chevron_right</span>
        </span>
      </li>
      {% if loop.last %}
      <li class="inline">
        <span aria-hidden="true" class="mobile-lg:hidden">
          <span class="material-symbols-outlined !text-base !leading-none align-middle text-gray-50">arrow_back</span>
        </span>
        <a href="{{breadcrumb.slug}}" class="text-blue-60v visited:text-violet-70v hover:text-blue-70v focus:outline focus:outline-4 focus:outline-blue-40v underline"><span>{{breadcrumb.label}}</span></a>
        <span aria-hidden="true" class="hidden mobile-lg:inline">
          <span class="material-symbols-outlined !text-base !leading-none align-middle text-gray-50">chevron_right</span>
        </span>
      </li>
      {% endif %}
    {% endfor %}
      <li class="inline-block whitespace-nowrap max-mobile-lg:sr-only">
        <span>Women-owned small business federal contracting program</span>
      </li>
    </ol>
  </nav>

</div>

{% endblock %}
